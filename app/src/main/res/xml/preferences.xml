<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- grouped checkboxes -->
    <PreferenceCategory android:title="SETTINGS">

        <CheckBoxPreference
            android:key="location_preference"
            android:title="Location"
            android:summary="Turn location on"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="dark_preference"
            android:title="Dark Theme"
            android:summary="Switch to dark theme"
            android:defaultValue="false"/>

        <CheckBoxPreference
            android:key="light_preference"
            android:title="Light Theme"
            android:summary="Switch to light theme"
            android:defaultValue="false"/>

    </PreferenceCategory>


</PreferenceScreen>